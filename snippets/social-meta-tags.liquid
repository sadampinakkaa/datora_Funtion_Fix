<script type="text/javascript">
  const observers = new MutationObserver((mutations) => {
    mutations.forEach(({ addedNodes }) => {
      addedNodes.forEach((node) => {
        if (node.nodeType === 1 && node.tagName === "SCRIPT") {
          const isAnalyticsOrBoomerang = node.classList.contains("analytics") || node.classList.contains("boomerang");
          const isExtensionOrKlaviyoScript = node.src.includes("cdn.shopify.com/extensions") ||
                                             node.src.includes("klaviyo.com/onsite") ||
                                             node.src.includes("shopify-perf-kit-unstable.min.js");
          const containsBlockedKeywords = node.textContent.includes("restockrocket-product.js") ||
                                          node.textContent.includes("discount-on-cart-pro.min.js") ||
                                          node.textContent.includes("transcy.js") ||
                                          node.textContent.includes("analytics.js") ||
                                          node.textContent.includes("pandectes-rules.min.js") ||
                                          node.textContent.includes("web_pixels_manager_load");

          if (isAnalyticsOrBoomerang) {
            node.type = "text/javascripts";
          } else if (isExtensionOrKlaviyoScript && !node.src.includes("datora")) {
            node.setAttribute("data-src", node.src);
            node.removeAttribute("src");
          } else if (containsBlockedKeywords) {
            node.type = "text/javascripts";
          }
        }
      });
    });
  });

  observers.observe(document.documentElement, {
    childList: true,
    subtree: true
  });
</script>